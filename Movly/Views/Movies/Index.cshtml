@model IEnumerable<Movly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<p>
    @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(m => m.Name)</th>
        <th>@Html.DisplayNameFor(m => m.Genre)</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@Html.ActionLink(movie.Name, "Details", "Movies", new {Id=movie.Id}, null)</td>
            <td>@Html.DisplayFor(m => movie.Genre.Name)</td>
            <td>@Html.ActionLink(" ", "Edit", "Movies", new { Id = movie.Id }, new { @class = "glyphicon glyphicon-pencil" })</td>
        </tr>
    }
    </tbody>
</table>