@model Movly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>@Html.DisplayNameFor(c => c.MembershipType.Name): @Model.MembershipType.Name</li>
    @if (Model.Birthdate.HasValue)
    {
        <li>@Html.DisplayNameFor(c => c.Birthdate): @Model.Birthdate.Value.ToShortDateString()</li>
    }
</ul>

